<ul class="nav navbar-fixed-top">
  <li>
    <%= link_to "Postit!", root_path, :class => 'brand' %>
  </li>
</ul>

<div class='btn-group nav_item'>
    <%= link_to '#', class: 'btn btn-small dropdown-toggle', 'data-toggle' => 'dropdown' do %>
    Categories <span class='caret'></span>
    <% end %>
    <ul class='dropdown-menu'>
      <% Category.all.each do |category| %>
        <li>
          <%= link_to category.name, category_path(category) %>
        </li>
      <% end %>
      <li class='divider'></li>
      <li>
          <%= link_to(new_category_path) do %>
            <i class="icon-plus"></i>
            New Category
          <% end %>
      </li>
    </ul>
</div>

<div class='nav_item'>
    <%= link_to 'New Post', new_post_path, class: 'btn btn-success btn-small' %>
</div>

<% if logged_in? %>
  <div class='nav_item' class='center'>
    <strong>Hi, <%= current_user.username.capitalize %>!</strong>
  </div>
  <div class='nav navbar-nav navbar-right' >
    <%= link_to 'Log out', logout_path, class: 'btn btn-info btn-small pull-right' %>
  </div>
<% else %>
  <div class='nav_item navbar-right'>
    <%= link_to 'Register', register_path, class: 'btn btn-success btn-small' %>
    <%= link_to 'Log in', login_path, class: 'btn btn-success btn-small' %>
  </div>
<% end %>