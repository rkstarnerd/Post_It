<%= render 'shared/content_title', title: "New Category" %>

<%= render 'shared/error', new_form: @category %>

<div class='well'>
  <%= form_for @category do |f| %>
    <div class='control-group'>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <br>
      <%= f.submit "Create Category", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>